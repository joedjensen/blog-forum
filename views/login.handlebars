<div class="row mb-5 ">
    <div class="card col p-0">
        <div class="card-header">
            <h1>Login</h1>
        </div>
        <div class="card-body">
            <div class="form-outline mb-4">
                <input type="email" id="email-login" class="form-control form-control-lg" />
                <label class="form-label" for="email-login">Email address</label>
            </div>

            <div class="form-outline mb-4">
                <input type="password" id="password-login" class="form-control form-control-lg" />
                <label class="form-label" for="password-login">Password</label>
            </div>

            <div class="pt-1 mb-4">
                <button class="btn btn-dark btn-lg btn-block" id="login-btn" type="button">Login</button>
                <button class="btn btn-dark btn-lg btn-block" id="create-btn" type="button">Create Account</button>
            </div>
        </div>
    </div>
</div>
<script src="/js/login.js"></script>